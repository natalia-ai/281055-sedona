<script>

    var link = document.querySelector(".homepage-booking-button");

var popup = document.querySelector(".homepage-booking-form");

link.addEventListener("click", function(evt) {
    evt.preventDefault();
    popup.classList.add("homepage-booking-button-show");
});

close.addEventListener("click", function(evt) {
    evt.preventDefault();
    popup.classList.remove("homepage-booking-button-show");
});

</script>